<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quizapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icons"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icons"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizApp">
        <activity
            android:name=".ResultActivity"
            android:exported="true" />

        <activity android:name=".Difficulty" />
        <activity android:name=".Category" />


        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".QuestionsGeography" />
        <activity android:name=".QuestionsScience"/>
        <activity android:name=".QuestionsSports"/>
        <activity android:name=".QuestionsHistory"/>
        <activity android:name=".QuestionsCulture"/>

    </application>

</manifest>